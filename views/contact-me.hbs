<style>
    form {
        font-size: 12pt;
    }

    /* GET IN TOUCH */
    h2 {
        text-align: center;
        font-family: Verdana, Geneva, Tahoma, sans-serifS;
        margin-top: 150px;
    }

    .button {
        cursor: pointer;
        border: none;
        float: right;
        margin-top: 13px;
        margin-bottom: 70px;
    }
</style>

<body>
    <script>
        let contact = document.getElementsByClassName("contact");
        console.log(contact);

        setInterval(function () {
            contact[0].style.color = "green";

            setTimeout(function () {
                contact[0].style.color = "orange";
            }, 500)

        }, 900);
    </script>

    <!-- First Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm fixed-top" style="background-color: rgb(253, 238, 241);">
        <div class="container">
            <a class="navbar-brand me-5" href="/"><img src="/public/assets/logo.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link active me-3 fw-bold" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/add-project">Add Project</a>
                    </li>
                </ul>
                <a href="/contact-me" class="btn btn-danger btn-sm text-white">Contact Me</a>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    <h2 class="contact fw-bold">GET IN TOUCH</h2>

    <!-- First Form -->
    <form style="width: 400px; margin: auto; margin-top: 40px;">
        <!-- Name -->
        <div style="margin-bottom: 20px;">
            <label for="input-name">Name</label>
            <input type="text" class="form-control" id="input-name" style="
                width: 100%;
                background-color: #fff;
                border: 1px solid rgb(199,199,199);
                border-radius: 5px;
                padding: 8px;
                ">
        </div>
        <!-- Name -->

        <!-- Email -->
        <div style="margin-bottom: 20px;">
            <label for="input-email">Email</label>
            <input type="email" id="input-email" class="form-control" style="
                width: 100%;
                background-color: #fff;
                border: 1px solid rgb(199,199,199);
                border-radius: 5px;
                padding: 8px; 
                ">
        </div>
        <!-- Email -->

        <!-- Phone Number -->
        <div style="margin-bottom: 20px;">
            <label for="input-number">Phone Number</label>
            <input type="text" id="input-number" class="form-control" style="
                width: 100%;
                background-color: #fff;
                border: 1px solid rgb(199,199,199);
                border-radius: 5px;
                padding: 8px; 
                ">
        </div>
        <!-- Phone Number -->

        <!-- Subject -->
        <div style="margin-bottom: 20px">
            <label for="select-subject">Subject</label>
            <select id="select-subject" style="
                width: 100%;
                background-color: #fff;
                border: 1px solid rgb(199,199,199);
                border-radius: 5px;
                padding: 8px;
                ">
                <option></option>
                <option>Front End Developer</option>
                <option>Back End Developer</option>
                <option>Fullstack Developer</option>
            </select>
        </div>
        <!-- Subject -->

        <!-- Your Message -->
        <div style="margin-bottom: 25px">
            <label for="input-meesage">Your Message</label>
            <textarea id="input-message" style="
                width: 100%;
                background-color: #fff;
                border: 1px solid rgb(199,199,199);
                border-radius: 5px;
                padding: 8px; 
                height: 100px;
                resize: none;
                "></textarea>
        </div>
        <!-- Your Message -->

        <!-- Submit -->
        <div class="button">
            <button style="
                padding: 7px 32px; 
                background-color: black; 
                color: #fff; 
                border-radius: 20px;
                cursor: pointer;
                " onclick="submitForm()" type="button">Submit</button>
        </div>
        <!-- Submit -->

    </form>
    <!-- End Form -->



    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
